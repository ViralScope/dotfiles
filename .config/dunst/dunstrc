[global]
    ### Display ###
    monitor = 0
    follow = none
    
    ### Geometry ###
    width = (150, 250)
    height = (0, 150)
    origin = top-right
    offset = (30, 40)
    
    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 400
    progress_bar_corner_radius = 5
    
    ### Appearance ###
    transparency = 10
    separator_height = 2
    padding = 8
    horizontal_padding = 10
    text_icon_padding = 10
    frame_width = 2
    frame_color = "#33ccff"
    separator_color = frame
    sort = yes
    corner_radius = 5
    
    ### Text ###
    font = Monospace 10
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    
    ### Icons ###
    icon_position = left
    min_icon_size = 24
    max_icon_size = 32
    icon_path = /usr/share/icons/hicolor/48x48/apps/:/usr/share/pixmaps/
    
    ### History ###
    sticky_history = yes
    history_length = 20
    
    ### Misc ###
    dmenu = /usr/bin/wofi --dmenu -p "Notification"
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    
    ### Mouse ###
    mouse_left_click = do_action, close_current
    mouse_middle_click = close_all
    mouse_right_click = close_current

[urgency_low]
    background = "#1e1e1e"
    foreground = "#ffffff"
    frame_color = "#33ccff"
    timeout = 5
    icon = dialog-information

[urgency_normal]
    background = "#2a2a2a"
    foreground = "#ffffff"
    frame_color = "#33ccff"
    timeout = 10
    icon = dialog-information

[urgency_critical]
    background = "#ff4444"
    foreground = "#000000"
    frame_color = "#ff0000"
    timeout = 0
    icon = dialog-error
    
### Custom Rules ###

# Spotify notifications
[spotify]
    appname = Spotify
    background = "#1db954"
    foreground = "#000000"
    frame_color = "#1db954"
    timeout = 5

# Volume notifications
[volume]
    summary = "Volume*"
    background = "#2a2a2a"
    foreground = "#33ccff"
    timeout = 2
    history_ignore = yes

# Brightness notifications  
[brightness]
    summary = "*rightness*"
    background = "#2a2a2a"
    foreground = "#33ccff"
    timeout = 2
    history_ignore = yes

# Battery warnings
[battery_low]
    summary = "*attery*"
    urgency = critical
    background = "#ff4444"
    foreground = "#000000"
